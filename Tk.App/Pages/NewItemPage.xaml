<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns        = "http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x      = "http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class      = "Tk.App.Pages.NewItemPage"
    Title        = "New Task"
    xmlns:models = "clr-namespace:Tk.App.ViewModels"
    x:DataType   = "models:NewItemViewModel"
>
    <ScrollView>
        
        <VerticalStackLayout
            Padding         = "20"
            Spacing         = "10"
            VerticalOptions = "StartAndExpand"
        >
            <Label Text="Name"/>
            <Entry Text="{Binding Name}"/>

            <Label Text="Description"/>
            <Entry Text="{Binding Description}"/>

            <Label Text="Has Due Date"/>
            <Switch IsToggled="{Binding HasDueDate}"/>

            <Label Text="Due Date"/>
            <DatePicker
                Date="{Binding DueDate}"
            />

            <Button 
                Text="Save"
                Clicked="OnSaveClicked"
            />

            <!-- <Button
                Text="Delete"
                Clicked="OnDeleteClicked"
            /> -->

            <Button 
                Text="Cancel"
                Clicked="OnCancelClicked"
            /> 

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
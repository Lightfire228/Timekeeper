<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class     = "Tk.App.AppShell"
    xmlns       = "http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mi    = "http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:local = "clr-namespace:Tk.App"
    xmlns:views = "clr-namespace:Tk.App.Pages"
    Title       = "Tk.App"
>

    <FlyoutItem
        Title = "Home"
        Icon  = "{mi:FontAwesomeSolid Icon=House}"
    >
        <Tab>
            <ShellContent
                Title           = "Home"
                ContentTemplate = "{DataTemplate local:MainPage}"
                Route           = "MainPage"
            />
        </Tab>
    </FlyoutItem>

    <FlyoutItem
        Title = "Tasks"
        Icon  = "{mi:FontAwesomeSolid Icon=ListCheck}"
    >
        <Tab>
            <ShellContent
                ContentTemplate = "{DataTemplate views:TaskList.TaskListView}"
            >
            </ShellContent>
        </Tab>
    </FlyoutItem>


</Shell>
